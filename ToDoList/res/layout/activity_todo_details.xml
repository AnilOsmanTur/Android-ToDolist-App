<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin"
    tools:context="app.anilosman.com.todolist.TodoDetailsActivity">

    <TextView
        android:id="@+id/todoTitleDetail"
        android:text="@string/todo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_margin"
        android:textSize="@dimen/medium_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/todoDetail_Detail"
        android:text="@string/todo"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_below="@+id/todoTitleDetail"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alarmDateDetail"
        android:text="Created: 10:00 PM"
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todoDetail_Detail"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/deleteButtonDetail"
        android:layout_below="@id/alarmDateDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/action_delete"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
