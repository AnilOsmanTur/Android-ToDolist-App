<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/medium_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.anilosman.com.todolist.AddTodoActivity">


    <TextView
        android:id="@+id/todoTitle"
        android:text="@string/todo_title"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/todoTitleEdit"
        android:text="@string/todo"
        android:layout_below="@id/todoTitle"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/todoDetail"
        android:text="@string/todo_detail"
        android:textSize="@dimen/medium_text"
        android:layout_below="@id/todoTitleEdit"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/todoDetailEdit"
        android:text="@string/todo"
        android:textSize="@dimen/medium_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_below="@+id/todoDetail"
        android:gravity="top"
        android:layout_above="@+id/okButton" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="@dimen/large_margin"
        android:text="@string/ok_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="61dp"
        android:layout_marginRight="@dimen/large_margin"
        android:text="@string/cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
